# Production environment example for SmartFarm TZ backend
# Copy this to your hosting provider's env configuration (do NOT commit real secrets).

# General
NODE_ENV=production
PORT=5000
APP_NAME=SmartFarm Tanzania
APP_URL=https://smartfarm-tz.site

# Database (use your managed MySQL instance)
DB_HOST=your_production_db_host
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_strong_db_password
DB_NAME=smartfarm_tz

# JWT
JWT_SECRET=change_this_to_a_long_random_secret_value
JWT_EXPIRE=7d

# M-Pesa (fill with real values when you get them)
MPESA_BASE_URL=https://openapi.m-pesa.com
MPESA_API_KEY=
MPESA_PUBLIC_KEY=
MPESA_SERVICE_PROVIDER_CODE=
MPESA_INITIATOR_IDENTIFIER=
MPESA_SECURITY_CREDENTIAL=
MPESA_ENVIRONMENT=production

# Pesapal
PESAPAL_BASE_URL=https://pay.pesapal.com
PESAPAL_SANDBOX_URL=https://cybqa.pesapal.com
PESAPAL_CONSUMER_KEY=
PESAPAL_CONSUMER_SECRET=
PESAPAL_ENVIRONMENT=production
# After deployment, replace localhost with your public backend URL
PESAPAL_IPN_URL=https://api.smartfarm-tz.site/api/payments/pesapal/ipn
PESAPAL_CALLBACK_URL=https://api.smartfarm-tz.site/api/payments/pesapal/callback

